<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NearByPlacesListActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/nearByrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Results"
        android:textAllCaps="false"
        android:onClick="getMoreResults"
        android:visibility="gone"
        android:id="@+id/getMoreResultButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View On\nMap"
        android:textAllCaps="false"
        android:onClick="viewOnMapClicked"
        android:id="@+id/viewOnMapButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/dataFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please, Try Again later"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:visibility="gone"
        />


</RelativeLayout>